{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "g++: Build main.cpp",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}/main.cpp",
				"-o",
				"${workspaceFolder}/dist/main"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}